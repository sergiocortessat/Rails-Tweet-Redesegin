<div class="home-user">
  <div class="middle-section container">
    <div class="tweet-section">
      <h4>What's Happening?</h4>
      <div>
        <%= form_for @opinion do |opinion| %>
          <%= opinion.text_field :text, class:"tweet", id:"text"%>
          <%= opinion.submit "Tweet", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="new-tweets">
      <h4> NEW OPINIONS</h4>
      <% @opinions.each do |opinions|%>
        <div class="user-opinions">
          <div class="user-details">
            <h5><%= link_to opinions.author.username, user_path(opinions.author.id) %></h5>
            <span class="container"><%= opinions.text %></span><br/><br/>
            <div class = "mt-2">
            <span class ="mb-2">This opinion has <%= opinions.likes.count %> like</span><br/>
            <span>
              <%= link_to opinion_likes_path(opinions), class: "text-light", method: :post do %>
              <% if liked?(opinions, 'opinion') %>
                <p><span class="text-dark mt-2 mb-2">Unlike</span></p>
              <% else %>
                <button class="btn btn-neutral"><span><i class="fa fa-thumbs-up"></i></span></button>
              <% end %>
              <%end%>
          </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="rightbar-home">
  <h4>WHO TO FOLLOW</h4>
  <% @user.each do |f| %>
    <div class="user-section">
      <div class="user-photo">
        <%= avatar_for(f) %>
      </div>
      <div class="user-details">
        <%= link_to f.username, user_path(f.id) %>
        <%= f.fullname %>
      </div>
    </div>
  <% end %>
</div>
</div>
